<%- model_class = Staff -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>


<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Image_url) %></th>
      <th><%= model_class.human_attribute_name(:FullName) %></th>
      <th><%= model_class.human_attribute_name(:JobTitle) %></th>
      <th><%= model_class.human_attribute_name(:JobDescription) %></th>
      <th><%= model_class.human_attribute_name(:Email) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
     
<th><%= model_class.human_attribute_name(:Admin) %></th>
 <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= link_to staff.id, staff_path(staff) %></td>
        
<td>
        <div class="image">
            <%= link_to (image_tag staff.Image_url, :style => "height:100px; width:100px"), staff %>
        </div>
    </td>

<!--<td><%= staff.Image_url %></td>-->
        <td><%= staff.FullName %></td>
        <td><%= staff.JobTitle %></td>
        <td><%= staff.JobDescription %></td>
        <td><%= staff.Email %></td>
        <td><%=l staff.created_at %></td>
 <td><%= staff.admin.email %></td>

        <td>
          <%if staff.admin == current_admin%>
	<%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_staff_path(staff), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      staff_path(staff),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        
<%end%>
<%= link_to t('.show', :default => t("helpers.links.show")),
                      staff_path(staff), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_staff_path,
            :class => 'btn btn-primary' %>
