<%= form_for @holiday, :html => { :class => "form-horizontal holiday" } do |f| %>

    <% if @holiday.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@holiday.errors.count, "error") %> prohibited this holiday from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @holiday.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :FullName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :FullName, :class => 'form-control' %>
    </div>
    <%= error_span(@holiday[:FullName]) %>
  </div>
  <div class="control-group">
    <%= f.label :From, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :From, :class => 'form-control' %>
    </div>
    <%= error_span(@holiday[:From]) %>
  </div>
  <div class="control-group">
    <%= f.label :To, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :To, :class => 'form-control' %>
    </div>
    <%= error_span(@holiday[:To]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            holidays_path, :class => 'btn btn-default' %>

<% end %>
