<%- model_class = Holiday -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:FullName) %>:</strong></dt>
  <dd><%= @holiday.FullName %></dd>
  <dt><strong><%= model_class.human_attribute_name(:From) %>:</strong></dt>
  <dd><%= @holiday.From %></dd>
  <dt><strong><%= model_class.human_attribute_name(:To) %>:</strong></dt>
  <dd><%= @holiday.To %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              holidays_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_holiday_path(@holiday), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              holiday_path(@holiday),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
